<div class="page-header">
  <h1>
    Logs
    <a href="/logs/new" class="btn btn-lg btn-success">New Log</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>User</th>
        <th>Symptom</th>
        <th>Actions</th>
      </tr>

      <% @logs.each do |log| %>
      <tr>
        <td><%= log.user.created_at %></td>
        <td><%= log.symptom.symptom_name %></td>
        <td>
          <a href="/logs/<%= log.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == log.user %>
            <a href="/logs/<%= log.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_log/<%= log.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
